<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sensor_daily_row"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/hdr_daily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/hdr_daily_num"
            style="@style/table_num"
            tools:text="12,345" />

        <View style="@style/row_divider" />

        <TextView
            android:id="@+id/hdr_daily_day"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:lines="1"
            android:textSize="16dp"
            tools:text="Dec 13 Wed" />

        <View style="@style/row_divider" />

        <TextView
            android:id="@+id/hdr_daily_temp_min_date"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:textSize="16dp"
            tools:text="12:34 PM" />

        <View style="@style/row_divider" />

        <TextView
            android:id="@+id/hdr_daily_temp_min_temp"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:textSize="18dp"
            tools:text="120.2" />

        <View style="@style/row_divider" />

        <TextView
            android:id="@+id/hdr_daily_temp_max_date"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:textSize="16dp"
            tools:text="12:34 PM" />

