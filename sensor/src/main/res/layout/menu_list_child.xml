LinearLayout - list view child
   margin is ignored
      android:layout_margin="40dp"
   width wrap is ignored
      android:layout_width="wrap_content"
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/menu_child_icon"
        style="@style/menu_icon"
        android:importantForAccessibility="no"
        tools:src="@drawable/ic_log_delete" />

    <!-- no clickable items
        android:focusable="false"
        android:clickable="false"
        android:descendantFocusability="blocksDescendants"
    -->
    <CheckBox
        android:id="@+id/menu_child_name"
        style="@style/menu_text"
        android:autoSizeMaxTextSize="24sp"
        android:autoSizeTextType="uniform"
        android:button="@null"
        android:checkMark="@null"
        android:checked="true"
        android:clickable="false"
        android:descendantFocusability="blocksDescendants"
        android:drawableEnd="@drawable/checkpath_anim_sel"
        android:drawablePadding="10dp"
        android:focusable="false"
        tools:text="About" />

</LinearLayout>
