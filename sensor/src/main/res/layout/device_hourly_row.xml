<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sensor_hourly_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/hdr_hourly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8ccc"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/hdr_hourly_num"
            style="@style/table_num"
            tools:text="Num" />

        <View style="@style/row_divider" />

        <TextView
            android:id="@+id/hdr_hourly_date"
            style="@style/hourly_date"
            tools:text="Dec 12 Wed" />

        <View style="@style/row_divider" />

        <TextView
            android:id="@+id/hdr_hourly_temperature"
            style="@style/hourly_temp"
            tools:text="Temp °F" />

        <View style="@style/row_divider" />

        <TextView
            android:id="@+id/hdr_hourly_humidity"
            style="@style/hourly_hum"
            tools:text="Hum %" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/row_hourly_num"
            style="@style/table_num"
            tools:text="12,345" />

        <View style="@style/row_divider" />

        <TextView
            android:id="@+id/row_hourly_date"
            style="@style/hourly_date"
            tools:text="12:34 PM" />

        <View style="@style/row_divider" />

        <TextView
            android:id="@+id/row_hourly_temperature"
            style="@style/hourly_temp"
            tools:text="20.2 °F" />

        <View style="@style/row_divider" />

        <TextView
            android:id="@+id/row_hourly_humidity"
            style="@style/hourly_hum"
            tools:text="87.2 %" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bot_hourly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8ccc"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/bot_hourly_num"
            style="@style/table_num"
            android:text="@string/sensor_hourly_row_bot_hourly_num" />

        <View style="@style/row_divider" />

        <TextView
            android:id="@+id/bot_hourly_date"
            style="@style/hourly_date"
            android:text="@string/sensor_hourly_row_bot_hourly_date" />

        <View style="@style/row_divider" />

        <TextView
            android:id="@+id/bot_hourly_temperature"
            style="@style/hourly_temp"
            android:text="@string/sensor_hourly_row_bot_hourly_temperature" />

        <View style="@style/row_divider" />

        <TextView
            android:id="@+id/bot_hourly_humidity"
            style="@style/hourly_hum"
            android:text="@string/sensor_hourly_row_bot_hourly_humidity" />
    </LinearLayout>
</LinearLayout>
