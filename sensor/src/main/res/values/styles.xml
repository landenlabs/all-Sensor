<resources>
    <!-- Base application theme.
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Title">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="textBold20">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>>
    </style>

    <style name="text16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textLink16">
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>>
    </style>

    <style name="textLink20">
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>>
    </style>

    <style name="result_scroll_border_panel">
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/round_border_lite</item>
        <item name="android:padding">@dimen/round_padding</item>
    </style>

    <!--
        <item name="android:shadowColor">#ffff</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">0.5</item>
    -->

    <style name="menu_text">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">22sp</item>
        <item name="android:background">@drawable/transparent_ripple</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="menu_icon">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="ScrollTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/lighten</item>
    </style>
    <style name="ScrollTabStyle" parent="Widget.Design.TabLayout">
        <item name="android:textSize">14dp</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextAppearance">@style/ScrollTabTextAppearance</item>
    </style>

    <style name="row_divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#833</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="table_tab_btn">
        <item name="android:background">@drawable/round_border_transparent2</item>
        <item name="android:drawableLeft">@drawable/checkmark_sel</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="table_num">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="hourly_date">
        <item name="android:layout_width">104dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="hourly_temp">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="hourly_hum">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="hourly_press">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="showToggle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_border_transparent2</item>
        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>

        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="wid_cfg_cb">
        <item name="android:minHeight">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checked">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/checkpath_anim_sel</item>
    </style>

    <style name="wid_cfg_int">
        <item name="android:minHeight">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:entries">@array/sensorIntervalArray</item>
        <item name="android:hint">@string/intervalHint</item>
        <item name="android:popupBackground">@color/popup_bg</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="selectOnly">true</item>
        <item name="defaultIndex">0</item>
    </style>

    <style name="CfgDeviceSpinnerTheme">
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    </style>
    <style name="SpinnerItem">
        <item name="android:textColor">#000</item>
        <item name="android:background">#eee</item>
    </style>
</resources>